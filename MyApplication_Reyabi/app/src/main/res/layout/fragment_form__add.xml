<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Form_Add"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:orientation="vertical"
        android:background="@drawable/border_ui">

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:fontFamily="serif-monospace"
            android:text="Formulaire"
            android:textAlignment="center"
            android:textColor="#000"
            android:textCursorDrawable="@color/cardview_dark_background"
            android:textSize="40dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="102dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="l'identifiant de la societe:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/id_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#000" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="91dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Nom de la societe:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/nom_edit"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textColor="#000" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="102dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Domaine de la societe:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/dom_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textColor="#000" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Adresse de la societe:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/adr_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#000" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Zone de la societe:"
                android:textColor="#000" />

            <Spinner
                android:id="@+id/Zone_Spinner"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textColor="#000" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="139dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Telephone de la societe:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/Tel_edit"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#000" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView61"
                android:layout_width="139dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Latitude:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/Lat_edit"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#000" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="152dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Longitude:"
                android:textColor="#000" />

            <EditText
                android:id="@+id/Lng_edit"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowRadius="@android:integer/config_mediumAnimTime"
                android:text="Ajouter" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>